
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src", "src/types", "src/config"],
  "exclude": ["node_modules", "public"]
}
